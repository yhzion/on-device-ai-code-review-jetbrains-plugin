<idea-plugin>
    <id>com.github.yhzion.aicodereviewjetbrainsplugin</id>
    <name>Review Code Changes with AI</name>
    <vendor>youngho.jeon</vendor>

    <depends>com.intellij.modules.platform</depends>
    <depends config-file="withMarkdown.xml">org.intellij.plugins.markdown</depends>

    <resource-bundle>messages.MyBundle</resource-bundle>

    <extensions defaultExtensionNs="com.intellij">
        <!-- Tool Window 등록 -->
        <toolWindow
                factoryClass="com.github.yhzion.jetbrains.plugin.reviewcodechanges.toolWindow.AICodeReviewToolWindowFactory"
                id="AICodeReview"
                anchor="right"
        />

        <!-- 플러그인 설정 서비스 등록 -->
        <applicationService serviceImplementation="com.github.yhzion.jetbrains.plugin.reviewcodechanges.CodeReviewSettings"/>

        <!-- 플러그인 설정 화면 등록 -->
        <applicationConfigurable
                instance="com.github.yhzion.jetbrains.plugin.reviewcodechanges.settings.CodeReviewSettingsConfigurable"
                id="com.github.yhzion.jetbrains.plugin.deltareview.settings.DeltaReviewSettingsConfigurable"
                displayName="Delta Code Settings"/>
    </extensions>

    <applicationListeners>
        <!-- 애플리케이션 활성화 시 리스너 등록 -->
        <listener class="com.github.yhzion.jetbrains.plugin.reviewcodechanges.listeners.ApplicationActivationListener" topic="com.intellij.openapi.application.ApplicationActivationListener"/>
    </applicationListeners>

    <actions>
        <!-- AI 코드 리뷰 실행 액션 등록 -->
        <action id="AICodeReview.RunReview"
                class="com.github.yhzion.jetbrains.plugin.reviewcodechanges.CodeReviewAction"
                text="Run AI Code Review"
                description="Run AI-powered code review">
            <add-to-group group-id="ToolsMenu" anchor="last"/>
            <keyboard-shortcut keymap="$default" first-keystroke="ctrl alt R"/>
        </action>
    </actions>

    <projectListeners>
        <!-- 파일 변경 시 실행되는 리스너 등록 -->
        <listener class="com.github.yhzion.jetbrains.plugin.reviewcodechanges.CodeReviewFileListener"
                  topic="com.intellij.openapi.vfs.VirtualFileListener"/>
    </projectListeners>
</idea-plugin>