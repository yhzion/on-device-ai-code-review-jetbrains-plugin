<idea-plugin>
    <id>com.github.yhzion.intellij.plugins.deltareview</id>
    <name>Delta Review with AI</name>
    <vendor>gplusit@gmail.com</vendor>

    <depends>com.intellij.modules.platform</depends>
    <depends config-file="withMarkdown.xml">org.intellij.plugins.markdown</depends>

    <resource-bundle>messages.DeltaReviewBundle</resource-bundle>

    <extensions defaultExtensionNs="com.intellij">
        <toolWindow
                factoryClass="com.github.yhzion.jetbrains.plugin.deltareview.toolWindow.DeltaReviewToolWindowFactory"
                id="Delta review"
                anchor="right"
                icon="AllIcons.Toolwindows.Documentation"
        />

        <applicationService serviceImplementation="com.github.yhzion.jetbrains.plugin.deltareview.CodeReviewSettings"/>

        <applicationConfigurable
                instance="com.github.yhzion.jetbrains.plugin.deltareview.settings.DeltaReviewSettingsConfigurable"
                id="com.github.yhzion.jetbrains.plugin.deltareview.settings.DeltaReviewSettingsConfigurable"
                displayName="Review Code Changes Settings"/>
    </extensions>

    <applicationListeners>
        <listener class="com.github.yhzion.jetbrains.plugin.deltareview.listeners.ApplicationActivationListener" topic="com.intellij.openapi.application.ApplicationActivationListener"/>
    </applicationListeners>

    <actions>
        <!-- AI 코드 리뷰 실행 액션 등록 -->
        <action id="DeltaReview.RunReview"
                class="com.github.yhzion.jetbrains.plugin.deltareview.DeltaReviewAction"
                text="Run AI Code Review"
                description="Run AI-powered code review">
            <add-to-group group-id="ToolsMenu" anchor="last"/>
            <keyboard-shortcut keymap="$default" first-keystroke="ctrl alt R"/>
        </action>
    </actions>

    <projectListeners>
        <!-- 파일 변경 시 실행되는 리스너 등록 -->
        <listener class="com.github.yhzion.jetbrains.plugin.deltareview.CodeReviewFileListener"
                  topic="com.intellij.openapi.vfs.VirtualFileListener"/>
    </projectListeners>
</idea-plugin>